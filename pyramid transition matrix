class Solution:
    def pyramidTransition(self, bottom: str, allowed: List[str]) -> bool:
        from collections import defaultdict
        mp = defaultdict(list)
        for a in allowed:
            mp[a[:2]].append(a[2])
        def dfs(row):
            if len(row) == 1:
                return True
            def build(i, next_row):
                if i == len(row) - 1:
                    return dfs(next_row)
                key = row[i:i+2]
                if key not in mp:
                    return False
                for ch in mp[key]:
                    if build(i + 1, next_row + ch):
                        return True
                return False
            return build(0, "")
        return dfs(bottom)
