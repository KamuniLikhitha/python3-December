from collections import Counter
class Solution:
    def specialTriplets(self, nums: List[int]) -> int:
        MOD = 10**9 + 7
        right = Counter(nums)
        left = Counter()
        ans = 0
        for x in nums:
            right[x] -= 1
            if right[x] == 0:
                del right[x]
            ans += left.get(x*2, 0) * right.get(x*2, 0)
            left[x] += 1
        return ans % MOD
