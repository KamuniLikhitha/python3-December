class Solution:
    def bestClosingTime(self, customers: str) -> int:
        penalty = customers.count('Y')
        min_penalty = penalty
        best = 0
        for i, c in enumerate(customers):
            penalty += -1 if c == 'Y' else 1
            if penalty < min_penalty:
                min_penalty = penalty
                best = i + 1
        return best
